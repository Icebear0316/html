<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.baking.mapper.UserMapper">
    <select id="selectByUserName">
        SELECT id,password,nick_name,is_admin,img_url
        FROM t_user
        WHERE user_name=#{username}
    </select>
    <insert id="insert">
        INSERT INTO t_user VALUES (NULL, #{userName}, #{nickName},
                                   #{password}, #{isAdmin}, #{createTime}, #{imgUrl})
    </insert>

</mapper>










