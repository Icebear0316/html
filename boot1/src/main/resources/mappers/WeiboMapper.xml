<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.boot1.mapper.WeiboMapper">
    <insert id="insert">
        INSERT INTO weibo VALUES (NULL,#{content},#{created},#{userId})
    </insert>
    <select id="select" resultType="cn.tedu.boot1.pojo.vo.WeiboIndexVO">
        SELECT w.id, content,nickname
        FROM weibo w JOIN user u ON w.user_id=u.id
    </select>
    <delete id="deleteById">
        DELETE FROM weibo WHERE id=#{id}
    </delete>
</mapper>










